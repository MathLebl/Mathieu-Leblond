<h1 class="mt-2 mx-4 mb-6">Si l'amérique m'était comptée</h1>
<ul>
  <% @episodes.each do |episode| %>
  <li>
    <div class="px-4 py-2 border border-primary shadow-lg my-3 w-75">
      <h5 id="title"><%= episode.title %></h5>
      <audio controls id="audio" class="d-none w-100">
        <source src="<%= episode.url %>" type="audio/mpeg">
      </audio>
    </div>
  </li>
  <% end %>
</ul>




