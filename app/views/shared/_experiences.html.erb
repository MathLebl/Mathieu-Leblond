<section class="resume-section" id="experience">
  <div class="resume-section-content">
    <h2 class="mb-5">Experiences</h2>
    <% @experiences.each do |experience| %>
      <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
        <div class="flex-grow-1">
          <h3 class="mb-0"><%= experience.role %></h3>
          <div class="subheading mb-3"><%= experience.entreprise %></div>
          <% @xp_descriptions.each do |description| %>
            <p class="text-justify"><%= description.text %></p>

          <% end %>
          </div>
        <div class="flex-shrink-0"><span class="text-primary"><%= experience.start %> - <%= experience.end %></span></div>
      </div>
   <% end %>
  </div>
</section>



